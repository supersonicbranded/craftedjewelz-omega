  "build": {
    "appId": "com.craftedjewelz.app",
    "productName": "CraftedJewelz",
    "directories": {
      "buildResources": "../../assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/craftedjewelz.icns"
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "contents": [
        { "x": 130, "y": 220, "type": "file", "path": "CraftedJewelz.app" },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/craftedjewelz.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/craftedjewelz.png",
      "category": "Graphics"
    },
    "publish": [
      { "provider": "github" }
    ]
  }


