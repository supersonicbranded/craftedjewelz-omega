{
  "name": "craftedjewelz",
  "version": "4.0.0",
  "main": "main.js",
  "author": {
    "name": "Your Name",
    "email": "your@email.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.craftedjewelz.app",
    "productName": "CraftedJewelz",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.graphics-design",
      "dmg": {
        "background": "build/dmg-background.png",
        "iconSize": 128,
        "iconTextSize": 12
      }
    },
    "win": {
      "target": "nsis",
      "icon": "build/appicon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/appicon.png",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  }
}

}
