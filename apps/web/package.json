{
  "name": "craftedjewelz",
  "version": "1.0.0",
  "description": "CraftedJewelz - Professional Jewelry CAD Software",
  "author": "SupersonicBranded",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron electron/main.js",
    "dist": "electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.craftedjewelz.app",
    "productName": "CraftedJewelz",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/icons/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "CraftedJewelz-${version}-mac.${ext}",
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "sign": false,
      "background": "assets/dmg-background.png"
    },
    "win": {
      "target": "nsis",
      "artifactName": "CraftedJewelz-${version}-win.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "CraftedJewelz-${version}-linux.${ext}",
      "category": "Graphics"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  }
}

