{
  "name": "craftedjewelz",
  "version": "3.0.2",
  "description": "CraftedJewelz â€“ Professional Jewelry Design & CAD Platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Supersonic Branded",
    "email": "support@craftedjewelz.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.craftedjewelz.desktop",
    "productName": "CraftedJewelz",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "index.html",
      "assets/**/*",
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/appicon2.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "build/appicon2.ico",
      "target": ["nsis", "zip"]
    },
    "linux": {
      "category": "Utility",
      "icon": "build/appicon2.png",
      "target": ["AppImage", "deb"]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  }
}
