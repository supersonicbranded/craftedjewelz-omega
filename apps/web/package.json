{
  "name": "craftedjewelz",
  "version": "2.0.5",
  "description": "CraftedJewelz Omega desktop app",
  "author": "Supersonic Branded",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  },
  "build": {
    "appId": "com.supersonicbranded.craftedjewelz",
    "productName": "CraftedJewelz",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer/**/*",
      "assets/**/*",
      "build/**/*",
      "!node_modules/**/.cache",
      "!dist"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/appicon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/appicon.ico",
      "artifactName": "CraftedJewelz-${version}-win.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "build/icons",
      "artifactName": "CraftedJewelz-${version}-linux.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  }
}

