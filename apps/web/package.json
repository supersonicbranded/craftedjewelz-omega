{
  "name": "craftedjewelz",
  "version": "1.0.0",
  "description": "CraftedJewelz â€” Professional Jewelry CAD/CAM Platform",
  "author": "Supersonic Branded <support@craftedjewelz.com>",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron": "^30.5.1"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  },
  "build": {
    "appId": "com.supersonicbranded.craftedjewelz",
    "productName": "CraftedJewelz",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": ["dmg", "zip"],
      "icon": "build/appicon2.png"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "build/appicon2.png"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "build/appicon2.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  }
}


