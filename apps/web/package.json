{
  "name": "craftedjewelz",
  "version": "4.0.0",
  "description": "CraftedJewelz desktop app with Electron, React (Vite), and TailwindCSS",
  "main": "main.js",
  "author": {
    "name": "Supersonic Branded",
    "email": "support@craftedjewelz.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "electron-builder",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "9.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "electron": "30.5.1",
    "electron-builder": "24.13.3",
    "postcss": "8.5.6",
    "tailwindcss": "3.4.13",
    "vite": "5.4.8"
  },
  "build": {
    "appId": "com.supersonicbranded.craftedjewelz",
    "productName": "CraftedJewelz",
    "files": [
      "dist/",
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "apps/web/build/appicon2.icns",
      "artifactName": "CraftedJewelz-${version}.dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "apps/web/build/appicon2.ico",
      "artifactName": "CraftedJewelz-${version}-setup.exe"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "apps/web/build/icons",
      "category": "Utility",
      "artifactName": "CraftedJewelz-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  }
}


