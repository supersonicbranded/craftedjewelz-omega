{
  "name": "craftedjewelz",
  "version": "4.0.0",
  "description": "CraftedJewelz desktop app with Electron, React (Vite), and TailwindCSS",
  "main": "main.js",
  "author": {
    "name": "Supersonic Branded",
    "email": "support@craftedjewelz.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build-web": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 8080",
    "build": "npm run build-web && electron-builder",
    "build-mac": "npm run build-web && electron-builder --mac",
    "build-mac-dmg": "npm run build-web && electron-builder --mac dmg",
    "build-win": "npm run build-web && electron-builder --win",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@types/three": "^0.180.0",
    "electron-store": "9.0.0",
    "i18next": "^25.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^16.0.0",
    "scheduler": "^0.26.0",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "postcss": "8.5.6",
    "tailwindcss": "3.4.13",
    "vite": "5.4.8"
  },
  "build": {
    "appId": "com.supersonicbranded.craftedjewelz",
    "productName": "CraftedJewelz Professional",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "electron-dist"
    },
    "mac": {
      "target": {
        "target": "zip",
        "arch": ["arm64", "x64"]
      },
      "icon": "build/icons/appicon.icns",
      "category": "public.app-category.graphics-design",
      "artifactName": "CraftedJewelz-Professional-${version}-${arch}.zip",
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "win": {
      "target": "nsis",
      "icon": "apps/web/build/appicon2.ico",
      "artifactName": "CraftedJewelz-${version}-setup.exe"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "apps/web/build/icons",
      "category": "Utility",
      "artifactName": "CraftedJewelz-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  }
}
