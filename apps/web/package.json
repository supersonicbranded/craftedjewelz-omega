{
  "name": "craftedjewelz",
  "version": "1.0.0",
  "description": "CraftedJewelz Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {},
  "build": {
    "appId": "co.craftedjewelz.app",
    "productName": "CraftedJewelz",
    "directories": {
      "buildResources": "apps/web/build/icons"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "icon": "apps/web/build/icons/appicon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "apps/web/build/icons/appicon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "apps/web/build/icons",
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  }
}


