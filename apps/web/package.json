{
  "name": "craftedjewelz",
  "version": "2.0.6",
  "description": "CraftedJewelz Desktop App",
  "author": "Supersonic Branded <support@supersonicbranded.com>",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.supersonicbranded.craftedjewelz",
    "productName": "CraftedJewelz",
    "directories": {
      "buildResources": "apps/web/build/icons"
    },
    "files": [
      "dist/**/*",
      "index.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "apps/web/build/icons/appicon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "apps/web/build/icons/appicon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "apps/web/build/icons"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {}
}
