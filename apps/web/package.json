{
  "name": "craftedjewelz",
  "version": "3.0.2",
  "description": "CraftedJewelz desktop application",
  "author": {
    "name": "Supersonic Branded",
    "email": "support@craftedjewelz.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.craftedjewelz.app",
    "productName": "CraftedJewelz",
    "directories": {
      "buildResources": "apps/web/build",
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "apps/web/build/appicon2.png"
    },
    "win": {
      "icon": "apps/web/build/appicon2.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "category": "Utility",
      "icon": "apps/web/build/appicon2.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Supersonic Branded <support@craftedjewelz.com>"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  }
}
