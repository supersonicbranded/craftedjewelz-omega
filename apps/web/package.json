{
  "name": "craftedjewelz",
  "version": "3.0.3",
  "description": "CraftedJewelz Desktop Application",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "start": "electron ."
  },
  "author": {
    "name": "CraftedJewelz Team",
    "email": "support@craftedjewelz.com"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.2.1"
  },
  "build": {
    "appId": "com.craftedjewelz.desktop",
    "productName": "CraftedJewelz",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": ["dmg", "zip"],
      "icon": "build/appicon.icns"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "build/appicon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icons",
      "category": "Graphics"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "supersonicbranded",
        "repo": "craftedjewelz-omega"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  }
}
