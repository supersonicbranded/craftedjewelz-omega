{
  "name": "craftedjewelz",
  "version": "1.0.32",
  "description": "CraftedJewelz CAD software for jewelry design",
  "author": "Supersonic Branded",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron electron/main.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "vite": "^5.4.0",
    "typescript": "^5.5.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supersonicbranded/craftedjewelz-omega.git"
  },
  "build": {
    "appId": "com.craftedjewelz.app",
    "productName": "CraftedJewelz",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "CraftedJewelz-${version}-mac.${ext}"
    },
    "win": {
      "target": "nsis",
      "artifactName": "CraftedJewelz-${version}-win.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "CraftedJewelz-${version}-linux.${ext}",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
